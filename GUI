#include <iostream>
#include <vector>
#include <cstdlib>
#include <ctime>

class Nonogram {
public:
    Nonogram(int rows, int cols) : rows(rows), cols(cols), grid(rows, std::vector<int>(cols, 0)) {}

    void setCell(int row, int col, int value) {
        if (isValidCell(row, col)) {
            grid[row][col] = value;
        }
    }

    int getCell(int row, int col) const {
        return isValidCell(row, col) ? grid[row][col] : -1; // Return -1 for invalid cell
    }

    void printGrid() const {
        for (const auto& row : grid) {
            for (const auto& cell : row) {
                std::cout << (cell == 1 ? "⬛" : "⬜") << " "; // Black and white squares
            }
            std::cout << std::endl;
        }
    }

private:
    int rows;
    int cols;
    std::vector<std::vector<int>> grid;

    bool isValidCell(int row, int col) const {
        return row >= 0 && row < rows && col >= 0 && col < cols;
    }
};

int main() {
    srand(static_cast<unsigned int>(time(0)));
    Nonogram nonogram(10, 10);

    // Example of setting random cells
    for (int i = 0; i < 10; ++i) {
        int row = rand() % 10;
        int col = rand() % 10;
        nonogram.setCell(row, col, 1);
    }

    nonogram.printGrid();
    return 0;
}
